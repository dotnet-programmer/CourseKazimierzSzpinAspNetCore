@using Microsoft.AspNetCore.Identity
@using GymManager.Domain.Entities
@using Microsoft.AspNetCore.Mvc.Localization

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IViewLocalizer viewLocalizer

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-white" asp-action="Dashboard" asp-controller="Client" title="Moje konto">@viewLocalizer["MyAccount"]</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">@viewLocalizer["Registration"]</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">@viewLocalizer["Login"]</a>
		</li>
	}
</ul>