@page
@model RegisterModel
@inject IConfiguration configuration

@{
    ViewData["Title"] = "Rejestracja";
    Layout = $"/Views/{configuration.GetSection("TemplateKey").Value}/Shared/_LayoutIdentity.cshtml";
}

<p class="card-text text-center">Stwórz nowe konto</p>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <span asp-validation-for="Input.Email" class="text-danger"></span>
    <div class="input-group mb-3">
        <input asp-for="Input.Email" class="form-control" type="email" placeholder="Wprowadz adres e-mail" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope bigger-icon"></span>
            </div>
        </div>
    </div>

    <span asp-validation-for="Input.Password" class="text-danger"></span>
    <div class="input-group mb-3">
        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Wprowadz hasło" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock bigger-icon"></span>
            </div>
        </div>
    </div>

    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    <div class="input-group mb-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Potwierdź hasło" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock bigger-icon"></span>
            </div>
        </div>
    </div>
       
    <div class="d-grid mb-3">
        <button type="submit" class="btn btn-primary">Rejestruj</button>
    </div> 
</form>

<a asp-area="Identity" asp-page="/Account/Login" class="mt-3 d-block text-center">Mam już swoje konto</a>


