@page
@model RegisterModel
@{
	ViewData["Title"] = "Rejestracja";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - GymManager</title>
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GymManager.UI.styles.css" asp-append-version="true" />
	<style>
		Html, body {
			height: 100%;
		}
	</style>
</head>

<body class="bg-light">

	<div class="center-div-parent-container">
		<div class="center-div-container">
			<div class="card card-border-top">
				<h3 class="card-header bg-transparent mt-3 pb-3 text-center">@ViewBag.Title</h3>
				<div class="card-body">
					<p class="card-text text-center">Stwórz nowe konto</p>

					<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

						<span asp-validation-for="Input.Email" class="text-danger"></span>
						<div class="input-group mb-3">
							<input asp-for="Input.Email" class="form-control" type="email" placeholder="Wprowadz adres e-mail" />
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-envelope bigger-icon"></span>
								</div>
							</div>
						</div>

						<span asp-validation-for="Input.Password" class="text-danger"></span>
						<div class="input-group mb-3">
							<input asp-for="Input.Password" class="form-control" type="password" placeholder="Wprowadz hasło" />
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-lock bigger-icon"></span>
								</div>
							</div>
						</div>

						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						<div class="input-group mb-3">
							<input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Potwierdź hasło" />
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-lock bigger-icon"></span>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="offset-8 col-4">
								<button type="submit" class="btn btn-primary btn-block">Rejestruj</button>
							</div>
						</div>
					</form>

					<a asp-area="Identity" asp-page="/Account/Login" class="text-center">Mam już swoje konto</a>

				</div>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

@section Scripts {
	<partial name="Scripts/_ValidationScriptsPartial" />
}

